    <script>
    // ── FADE IN ──
    const io = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting) {
          e.target.classList.add('visible');
          io.unobserve(e.target);
        }
      });
    }, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });

    document.querySelectorAll('.fade-in:not(.visible)').forEach((el, i) => {
      el.style.transitionDelay = `${i * 0.05}s`;
      io.observe(el);
    });

    // ── LEDGER PAGE TURN ──
    const pages = Array.from(document.querySelectorAll('.ledger-page'));
    const pips  = Array.from(document.querySelectorAll('.pip'));
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const llNum   = document.getElementById('llNum');
    const llLabel = document.getElementById('llLabel');

    const pageLabels = [
      { num: 'I',   label: 'A Spring Evening<br>in Montreux' },
      { num: 'II',  label: 'A Winter Evening<br>at the Cabin' },
      { num: 'III', label: 'An Autumn Dinner<br>in Tokyo' },
    ];

    let current = 0;
    let animating = false;

    function goTo(next, direction) {
      if (animating || next === current) return;
      animating = true;

      const outClass = direction > 0 ? 'flip-out' : 'flip-out-reverse';
      const inClass  = direction > 0 ? 'flip-in'  : 'flip-in-reverse';

      const outPage = pages[current];
      const inPage  = pages[next];

      outPage.classList.remove('active');
      outPage.classList.add(outClass);

      outPage.addEventListener('animationend', () => {
        outPage.classList.remove(outClass);
        inPage.classList.add('active', inClass);
        inPage.addEventListener('animationend', () => {
          inPage.classList.remove(inClass);
          animating = false;
        }, { once: true });
      }, { once: true });

      current = next;

      pips.forEach((p, i) => p.classList.toggle('active', i === current));
      prevBtn.disabled = current === 0;
      nextBtn.disabled = current === pages.length - 1;

      llNum.style.opacity = '0';
      llLabel.style.opacity = '0';
      setTimeout(() => {
        llNum.innerHTML   = pageLabels[current].num;
        llLabel.innerHTML = pageLabels[current].label;
        llNum.style.opacity = '0.7';
        llLabel.style.opacity = '1';
      }, 220);
    }

    nextBtn.addEventListener('click', () => goTo(current + 1, 1));
    prevBtn.addEventListener('click', () => goTo(current - 1, -1));

    let touchStartX = 0;
    document.getElementById('ledgerBook').addEventListener('touchstart', e => {
      touchStartX = e.touches[0].clientX;
    }, { passive: true });
    document.getElementById('ledgerBook').addEventListener('touchend', e => {
      const dx = e.changedTouches[0].clientX - touchStartX;
      if (Math.abs(dx) > 40) {
        if (dx < 0 && current < pages.length - 1) goTo(current + 1, 1);
        if (dx > 0 && current > 0) goTo(current - 1, -1);
      }
    }, { passive: true });
  </script>

